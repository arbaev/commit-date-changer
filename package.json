{
  "name": "commit-date-changer",
  "version": "1.0.0",
  "description": "Interactive CLI tool to safely change Git commit dates",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "commit-date": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup src/cli.ts --format esm --dts --clean",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "git",
    "commit",
    "date",
    "cli",
    "interactive"
  ],
  "author": "Timur Arbaev",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "date-fns": "^3.0.0",
    "inquirer": "^9.2.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "glob": "^10.0.0",
    "rimraf": "^5.0.0"
  }
}
